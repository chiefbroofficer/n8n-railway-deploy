# n8n Railway Environment Variables Template
# Copy this to Railway's environment variables section

# === CORE CONFIGURATION ===
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
NODE_ENV=production

# === AUTHENTICATION ===
# Basic Auth (Recommended for initial setup)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# === DATABASE CONFIGURATION ===
# Railway PostgreSQL (automatically provided)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=${{PGHOST}}
DB_POSTGRESDB_PORT=${{PGPORT}}
DB_POSTGRESDB_DATABASE=${{PGDATABASE}}
DB_POSTGRESDB_USER=${{PGUSER}}
DB_POSTGRESDB_PASSWORD=${{PGPASSWORD}}
DB_POSTGRESDB_SCHEMA=public

# === WEBHOOK URL ===
# Railway automatically provides this
WEBHOOK_URL=${{RAILWAY_STATIC_URL}}
N8N_EDITOR_BASE_URL=${{RAILWAY_STATIC_URL}}

# === ENCRYPTION ===
# IMPORTANT: Generate a random 32-character string
N8N_ENCRYPTION_KEY=GENERATE_32_CHAR_RANDOM_STRING_HERE

# === EXECUTION SETTINGS ===
EXECUTIONS_MODE=regular
EXECUTIONS_PROCESS=main
EXECUTIONS_TIMEOUT=3600
EXECUTIONS_TIMEOUT_MAX=7200
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_ON_PROGRESS=true
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336

# === WORKFLOW SETTINGS ===
WORKFLOWS_DEFAULT_NAME=My Workflow
N8N_WORKFLOW_TAGS_DISABLED=false

# === API SETTINGS ===
N8N_API_DISABLED=false
N8N_API_ENDPOINT_PREFIX=api/v1
N8N_PUBLIC_API_DISABLED=false
N8N_PUBLIC_API_ENDPOINT=api

# === PERFORMANCE ===
N8N_CONCURRENCY_PRODUCTION_LIMIT=10
VUE_APP_MAX_PINNED_DATA_SIZE=16384

# === LOGGING ===
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# === TIMEZONE ===
GENERIC_TIMEZONE=America/New_York
TZ=America/New_York

# === TELEMETRY ===
N8N_DIAGNOSTICS_ENABLED=false
N8N_PERSONALIZATION_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=true
N8N_HIRING_BANNER_ENABLED=false
N8N_TEMPLATES_ENABLED=true
N8N_METRICS=false

# === COMMUNITY NODES ===
N8N_COMMUNITY_PACKAGES_ENABLED=true
NODE_FUNCTION_ALLOW_EXTERNAL=*
NODE_FUNCTION_ALLOW_BUILTIN=*

# === SMTP (Optional - for email nodes) ===
# N8N_EMAIL_MODE=smtp
# N8N_SMTP_HOST=smtp.gmail.com
# N8N_SMTP_PORT=465
# N8N_SMTP_USER=your-email@gmail.com
# N8N_SMTP_PASS=your-app-password
# N8N_SMTP_SSL=true
# N8N_SMTP_SENDER=your-email@gmail.com

# === REDIS (Optional - for scaling) ===
# QUEUE_BULL_REDIS_HOST=your-redis-host
# QUEUE_BULL_REDIS_PORT=6379
# QUEUE_BULL_REDIS_PASSWORD=your-redis-password